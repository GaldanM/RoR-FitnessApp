<% provide(:title, 'Message from ' + @message.name) %>
<div class="container form">

  <div class="row">
    <div class=".input-field col s6 offset-s3">
      <%= 'Message from ' + @message.name + ' on ' + @message.date.to_s(:long) %>
    </div>
  </div>

  <div class="row">
    <div class=".input-field col s3 offset-s3">
      <%= 'Phone number : ' + @message.phone %>
    </div>
    <div class=".input-field col s3">
      <%= 'Email : ' + @message.email %>
    </div>
  </div>

  <div class="row">
    <div class=".input-field col s6 offset-s3" style="text-align: left">
      <%= simple_format(@message.text) %>
    </div>
  </div>

  <div class="row">
    <div class="col s6 offset-s3">
      <%= link_to 'Back', messages_path, { :method => :get, class: 'btn blue' } %>
      <%= button_to 'Delete', message_path(@message), { :method => :delete, class: 'btn red' } %>
    </div>
  </div>

</div>