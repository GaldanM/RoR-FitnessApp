<% provide(:title, 'FitnessApp - ' +  'Create a new course') %>
<div class="container form">
  <%= form_for(:formCourse, url: courses_path) do |f| %>

      <div class="row">
        <div class="col s3 offset-s3">
          <%= f.label :title %>
          <%= f.text_field :title, required: true %>
        </div>
        <div class="col s3">
          <%= f.label :instructor %>
          <%= f.text_field :instructor, required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col s3 offset-s3">
          <%= f.label :day %>
          <%= f.select(:day, days, { prompt: 'Choose the day' }, { required: true, id: 'selectDay' }) %>
        </div>
        <div class="col s3">
          <%= f.label :start_date %>
          <%= f.text_field :start_date, { id: 'courseAdminDatepicker', placeholder: 'Choose the date', disabled: true, required: true, class: 'datepicker', type: 'date' } %>
        </div>
      </div>

      <div class="row">
        <div class="col s2 offset-s4">
          <%= f.label :hours %>
          <%= f.select :hours, hours, { prompt: 'Choose the hour' }, required: true %>
        </div>

        <div class="col s2">
          <%= f.label :minutes %>
          <%= f.select :minutes, minutes, { prompt: 'Choose the minutes' }, required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col s6 offset-s3">
          <%= f.label :description %>
          <%= f.text_area :description, { required: true, class: 'materialize-textarea' } %>
        </div>
      </div>

      <div class="row">
        <div class="col s4 offset-s4">
          <%= link_to 'Cancel', courses_path, { :method => :get, class: 'btn red' } %>
          <%= f.submit 'Create', { class: 'btn green' } %>
        </div>
      </div>
  <% end %>
</div>
