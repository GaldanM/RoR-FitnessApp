<% provide(:title, 'Edit ' + @membership.title + ' membership') %>
<div>
  <%= form_for(:formMembership, method: :patch, url: membership_path(@membership)) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, { value: @membership.title, :required => true } %>

      <%= f.label :price %>
      <%= f.text_field :price, { value: @membership.price, :required => true } %>

      <%= f.label :description %>
      <%= f.text_area :description, { value: @membership.description, :required => true } %>

      <%= f.submit 'Save' %>
  <% end %>
</div>
