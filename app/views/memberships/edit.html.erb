<% provide(:title, 'FitnessApp - ' + 'Edit ' + @membership.title + ' membership') %>
<div class="container form">
  <h5 class="filled"><%= 'Edit ' + @membership.title + ' membership' %></h5>
  <%= form_for(:formMembership, method: :patch, url: membership_path(@membership)) do |f| %>

      <div class="row">
        <div class="input-field col s4 offset-s4">
          <%= f.label :title %>
          <%= f.text_field :title, { value: @membership.title, required: true } %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s4 offset-s4">
          <%= f.label :price %>
          <%= f.number_field :price, { value: @membership.price, required: true, step: 0.1 } %>
        </div>
      </div>

      <div class="row">
        <div class="col s4 offset-s4">
          <%= f.label :description %>
          <%= f.text_area :description, { value: @membership.description, required: true, class: 'materialize-textarea' } %>
        </div>
      </div>

      <div class="row">
        <div class="col s4 offset-s4">
          <%= link_to 'Cancel', memberships_path, { :method => :get, class: 'btn red' } %>
          <%= f.submit 'Save', { class: 'btn green' } %>
        </div>
      </div>
  <% end %>
</div>


